<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/lightBlue200">

    <ImageView
        android:id="@+id/msgUserImage"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:contentDescription="@string/login"
        app:layout_constraintEnd_toEndOf="@+id/msgBodyLabel"
        app:layout_constraintTop_toBottomOf="@+id/msgBodyLabel"
        tools:srcCompat="@drawable/light0" />

    <TextView
        android:id="@+id/msgUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/msgBodyLabel"
        app:layout_constraintTop_toBottomOf="@+id/msgBodyLabel"
        tools:text="Wojciech" />

    <TextView
        android:id="@+id/msgTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/msgBodyLabel"
        app:layout_constraintStart_toStartOf="@+id/msgBodyLabel"
        tools:text="Marzec 9" />

    <TextView
        android:id="@+id/msgBodyLabel"
        android:layout_width="292dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:textColorLink="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="WiadomoscWiadomoscWiadomoscWiadomoscWiadomoscWiadomoscWiadomoscWiadomoscWiadomoscWiadomosc" />

</android.support.constraint.ConstraintLayout>